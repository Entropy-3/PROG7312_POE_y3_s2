@model PROG7312_POE.Models.eventTBL

@{
    ViewData["Title"] = "Add Event";
}

<head>
    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #0f2027, #203a43, #2c5364);
            color: #fff;
        }

        .form {
            max-width: 680px;
            margin: 50px auto;
            background-color: rgba(255, 255, 255, 0.05);
            padding: 30px;
            border-radius: 20px;
            box-shadow: 0 8px 20px rgba(0,0,0,0.5);
        }

        .title {
            font-size: 26px;
            color: #00bfff;
            margin-bottom: 6px;
        }

        .message {
            font-size: 14px;
            color: rgba(255,255,255,0.85);
            margin-bottom: 18px;
        }

        .row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 12px;
        }

        .full {
            grid-column: 1 / -1;
        }

        label {
            display: block;
            margin-bottom: 6px;
            font-size: 13px;
            color: rgba(255,255,255,0.9);
        }

        .input, select, textarea {
            width: 100%;
            padding: 12px;
            margin-bottom: 10px;
            border-radius: 10px;
            border: 1px solid rgba(255,255,255,0.08);
            background-color: rgba(255,255,255,0.03);
            color: #fff;
            font-size: 14px;
            box-sizing: border-box;
        }

        textarea {
            min-height: 120px;
            resize: vertical;
        }

        .submit {
            border: none;
            outline: none;
            padding: 12px 20px;
            border-radius: 10px;
            color: #fff;
            font-size: 16px;
            background-color: #00bfff;
            cursor: pointer;
        }

            .submit:hover {
                background-color: #00bfff96;
            }
    </style>
</head>

<body>
    <div class="form">
        <p class="title">Add Event</p>
        <p class="message">Provide event details below. All fields are required.</p>

        <form id="eventForm" method="post" asp-controller="Events" asp-action="AddEvent">
            <label>Event Name</label>
            <input class="input" type="text" name="EventName" placeholder="Event name" required />

            <label>Event Category</label>
            <select class="input" name="EventCategory" required>
                <option value="">Select category</option>
                <option value="Community">Community</option>
                <option value="Meeting">Meeting</option>
                <option value="Sports">Sports</option>
                <option value="Cultural">Cultural</option>
                <option value="Other">Other</option>
            </select>

            <label>Event Date</label>
            <input class="input" type="date" name="EventDate" required />

            <label>Location</label>
            <input class="input" type="text" name="Location" placeholder="Enter venue or address" required />

            <label>Description</label>
            <textarea class="input" name="Description" rows="4" placeholder="Describe the event (what, who, why)" required></textarea>

            <button type="submit" class="submit" style="margin-top:12px;">Create Event</button>
        </form>
    </div>
</body>
