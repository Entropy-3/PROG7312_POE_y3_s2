@using PROG7312_POE.Models
@model List<serviceTBL>

@{
    ViewData["Title"] = "Admin – All Service Requests";
    string selectedStatus = ViewBag.SelectedStatus as string ?? "";
}

<head>
    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg,#0f2027,#203a43,#2c5364);
            color: #fff;
        }

        .page {
            max-width: 1100px;
            margin: 40px auto 80px;
            padding: 0 20px;
        }

        .header {
            background: rgba(0,191,255,.15);
            padding: 18px 22px;
            border-radius: 20px;
            box-shadow: 0 4px 10px rgba(0,0,0,.4);
            display: flex;
            justify-content: space-between;
            gap: 12px;
        }

        .title {
            font-size: 24px;
            font-weight: 700;
            color: #00bfff;
            margin: 0;
        }

        .btn {
            background: #00bfff;
            color: #fff;
            border: 0;
            border-radius: 10px;
            padding: 10px 16px;
            font-weight: 600;
            cursor: pointer;
            text-decoration: none;
        }

            .btn:hover {
                background: #00bfff96;
            }

        .card {
            background: rgba(255,255,255,.05);
            border: 1px solid rgba(255,255,255,.1);
            border-radius: 20px;
            box-shadow: 0 8px 20px rgba(0,0,0,.5);
            padding: 18px;
            margin-top: 16px;
        }

        .toolbar {
            display: flex;
            gap: 10px;
            align-items: center;
            margin-bottom: 10px;
        }

        .input, select {
            width: 100%;
            padding: 10px;
            border-radius: 10px;
            border: 1px solid rgba(255,255,255,.08);
            background: rgba(255,255,255,.03);
            color: #fff;
            font-size: 14px;
            box-sizing: border-box;
        }

        table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0 8px;
        }

        th {
            text-align: left;
            font-size: 13px;
            color: rgba(255,255,255,.75);
            padding: 6px 10px;
        }

        td {
            background: rgba(255,255,255,.04);
            border: 1px solid rgba(255,255,255,.1);
            padding: 10px;
            vertical-align: middle;
        }

        tr td:first-child {
            border-top-left-radius: 12px;
            border-bottom-left-radius: 12px;
        }

        tr td:last-child {
            border-top-right-radius: 12px;
            border-bottom-right-radius: 12px;
        }

        .status-chip {
            padding: 4px 8px;
            border-radius: 8px;
            font-size: 12px;
            border: 1px solid rgba(255,255,255,.12);
            color: rgba(255,255,255,.9);
            background: rgba(255,255,255,.06);
        }

        .badge {
            padding: 4px 10px;
            border-radius: 999px;
            font-size: 12px;
            font-weight: 700;
            display: inline-block;
            border: 1px solid rgba(255,255,255,.12);
        }

        .prio-Critical {
            background: rgba(255,77,77,.15);
            color: #ff6b6b;
        }

        .prio-High {
            background: rgba(255,170,51,.15);
            color: #ffb74d;
        }

        .prio-Medium {
            background: rgba(0,191,255,.15);
            color: #00bfff;
        }

        .prio-Low {
            background: rgba(144,238,144,.15);
            color: #7ad57a;
        }

        .row-actions {
            display: flex;
            gap: 8px;
            align-items: center;
        }

        .w-160 {
            width: 160px;
        }

        .link {
            color: #fff;
            text-decoration: none;
            border-bottom: 1px dotted rgba(255,255,255,.25);
        }

            .link:hover {
                color: #00bfff;
                border-bottom-color: #00bfff;
            }
    </style>
</head>

<body>
    <div class="page">
        <div class="header">
            <h1 class="title">Admin — All Service Requests</h1>
        </div>

        <section class="card">
            <form method="get" class="toolbar" asp-controller="Services" asp-action="Admin">
                <select class="input w-160" name="status">
                    <option value="" selected="@(string.IsNullOrEmpty(selectedStatus) ? "selected" : null)">All Statuses</option>
                    @foreach (var s in Enum.GetValues(typeof(RequestStatus)).Cast<RequestStatus>())
                    {
                        var sel = (!string.IsNullOrEmpty(selectedStatus) && selectedStatus == s.ToString()) ? "selected" : null;
                        <option value="@s" selected="@sel">@s</option>
                    }
                </select>
                <button class="btn" type="submit">Apply Filter</button>
            </form>

            <table>
                <thead>
                    <tr>
                        <th style="width:80px;">ID</th>
                        <th>Title</th>
                        <th style="width:140px;">UserID</th>
                        <th style="width:130px;">Priority</th>
                        <th style="width:140px;">Status</th>
                        <th style="width:260px;">Change Status</th>
                        <th style="width:120px;">Created</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model == null || Model.Count == 0)
                    {
                        <tr>
                            <td colspan="7">
                                <span class="status-chip">No services found.</span>
                            </td>
                        </tr>
                    }
                    else
                    {
                        foreach (var s in Model)
                        {
                            var prioClass = "prio-" + s.Priority.ToString();
                            <tr>
                                <td>@s.ServiceID</td>
                                <td>
                                    <a class="link" asp-controller="Services" asp-action="Track" asp-route-id="@s.ServiceID">
                                        @s.Title
                                    </a>
                                </td>
                                <td>@s.UserID</td>
                                <td><span class="badge @prioClass">@s.Priority</span></td>
                                <td><span class="status-chip">@s.Status</span></td>
                                <td>
                                    <form method="post" asp-controller="Services" asp-action="AdminAdvanceStatus" class="row-actions">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@s.ServiceID" />
                                        <input type="hidden" name="statusFilter" value="@selectedStatus" />
                                        <select class="input w-160" name="next">
                                            @foreach (var st in Enum.GetValues(typeof(RequestStatus)).Cast<RequestStatus>())
                                            {
                                                var selected = (st == s.Status) ? "selected" : null;
                                                <option value="@st" selected="@selected">@st</option>
                                            }
                                        </select>
                                        <button class="btn" type="submit">Save</button>
                                    </form>
                                </td>
                                <td>@s.CreatedUtc.ToLocalTime()</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </section>
    </div>
</body>
