<head>
    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #0f2027, #203a43, #2c5364);
            color: #fff;
        }
        .form {
            display: flex;
            flex-direction: column;
            gap: 10px;
            max-width: 350px;
            padding: 20px;
            border-radius: 20px;
            position: relative;
            background-color: rgba(255, 255, 255, 0.05);
            color: #fff;
            border: 1px solid rgba(255, 255, 255, 0.1);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.5);
        }

        .title {
            font-size: 28px;
            font-weight: 600;
            letter-spacing: -1px;
            position: relative;
            display: flex;
            align-items: center;
            padding-left: 30px;
            color: #00bfff;
        }

            .title::before {
                width: 18px;
                height: 18px;
            }

            .title::after {
                width: 18px;
                height: 18px;
                animation: pulse 1s linear infinite;
            }

            .title::before,
            .title::after {
                position: absolute;
                content: "";
                height: 16px;
                width: 16px;
                border-radius: 50%;
                left: 0px;
                background-color: #00bfff;
            }

        .message,
        .signin {
            font-size: 14.5px;
            color: rgba(255, 255, 255, 0.8);
        }

        .signin {
            text-align: center;
        }

            .signin a:hover {
                text-decoration: underline royalblue;
            }

            .signin a {
                color: #00bfff;
            }

        .flex {
            display: flex;
            width: 100%;
            gap: 6px;
        }

        .form label {
            position: relative;
        }

            .form label .input {
                background-color: rgba(255,255,255,0.05);
                color: #fff;
                width: 100%;
                padding: 20px 05px 05px 10px;
                outline: 0;
                border: 1px solid rgba(105, 105, 105, 0.397);
                border-radius: 10px;
            }

                .form label .input + span {
                    color: rgba(255, 255, 255, 0.7);
                    position: absolute;
                    left: 10px;
                    top: 0px;
                    font-size: 0.9em;
                    cursor: text;
                    transition: 0.3s ease;
                }

                .form label .input:placeholder-shown + span {
                    top: 12.5px;
                    font-size: 0.9em;
                }

                .form label .input:focus + span,
                .form label .input:valid + span {
                    color: #00bfff;
                    top: 0px;
                    font-size: 0.7em;
                    font-weight: 600;
                }

        .input {
            font-size: medium;
        }

        .submit {
            border: none;
            outline: none;
            padding: 10px;
            border-radius: 10px;
            color: #fff;
            font-size: 16px;
            transform: .3s ease;
            background-color: #00bfff;
        }

            .submit:hover {
                background-color: #00bfff96;
            }

        .keyframes pulse {
            from

        {
            transform: scale(0.9);
            opacity: 1;
        }

        to {
            transform: scale(1.8);
            opacity: 0;
        }

        }
    </style>
</head>

@*\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\*@

<body>

    <div style="display: flex; justify-content: center; align-items: center; height: 75vh;">
        <form class="form" asp-controller="Auth" asp-action="Login" method="post">
            <p class="title">Login </p>
            <p class="message">Login </p>

            <label>
                <input class="input" type="text" name="email" required>
                <span>Email</span>
            </label>

            <label>
                <input class="input" type="password" name="Password" required>
                <span>Password</span>

                @* displays error message when email exists in database *@
                @if (ViewData.ModelState["Password"]?.Errors.Count > 0)
                {
                    <span style="color:red;">
                        @ViewData.ModelState["Password"]?.Errors[0]?.ErrorMessage
                    </span>
                }
            </label>


            <button class="submit">Submit</button>
            <p class="signin">Don't have an account ? <a href="@Url.Action("SignUp", "Auth")">Sign Up</a> </p>
        </form>
    </div>
    @{
        var alertMessage = TempData["AlertMessage"] as string;
    }

    @if (!string.IsNullOrEmpty(alertMessage))
    {
        <script>
            alert("@Html.Raw(alertMessage)");
        </script>
    }
</body>